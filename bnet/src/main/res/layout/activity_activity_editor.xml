<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bnet.data.controller.ActivityEditor">
    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/activiy_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:id="@+id/textView"
                android:textSize="20sp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:id="@+id/typeSpinner"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/countryField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/typeSpinner"
                android:hint="@string/country"/>
            <LinearLayout
                android:id="@+id/startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/countryField">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/start_date"/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:inputType="date"
                    android:id="@+id/startDay"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/day"/>
                <EditText
                    android:id="@+id/startMonth"
                    android:inputType="date"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/month"/>
                <EditText
                    android:id="@+id/startYear"
                    android:inputType="date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/year"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/startDate">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/start_time"/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:inputType="datetime"
                    android:id="@+id/startHour"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hour"/>
                <EditText
                    android:id="@+id/startMinute"
                    android:inputType="datetime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/minute"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/endDate"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/startTime">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/end_date"/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:inputType="date"
                    android:id="@+id/endDay"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/day"/>
                <EditText
                    android:id="@+id/endMonth"
                    android:inputType="date"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/month"/>
                <EditText
                    android:id="@+id/endYear"
                    android:inputType="date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/year"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/endDate">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/end_time"/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:inputType="datetime"
                    android:id="@+id/endHour"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hour"/>
                <EditText
                    android:id="@+id/endMinute"
                    android:inputType="datetime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/minute"/>
            </LinearLayout>

            <EditText
                android:id="@+id/priceField"
                android:hint="@string/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_below="@id/endTime"/>
            <EditText
                android:id="@+id/descriptionField"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description_hint"
                android:layout_below="@id/priceField"/>

            <Spinner
                android:id="@+id/businessSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionField"/>
            <Button
                android:text="@string/submit_button_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/businessSpinner"
                android:id="@+id/submitBtn" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
